<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Header -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#4296D8"
        android:padding="12dp"
        android:src="@drawable/ic_backbutton" />

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="Những chương trình thú vị"
        android:layout_marginStart="50dp"
        android:background="#4296D8"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/txtnamead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <ImageView
        android:id="@+id/imgad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnamead"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/chitiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgad"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Chi tiết: "
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/descriptionAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chitiet"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <LinearLayout
        android:id="@+id/linearplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/descriptionAd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Còn chần chừ gì mà không đến ngay với"
            android:layout_weight="1"
            android:textColor="#FF3333"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/txtplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nha Trang"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="15dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnBookingNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Đặt vé ngay"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:background="@drawable/custom_button"
        android:layout_below="@id/linearplace"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
    </Button>
</RelativeLayout>