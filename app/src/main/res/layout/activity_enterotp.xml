<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/arrowbg">

    <TextView
        android:id="@+id/tvEnterOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác thực"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOtpHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng nhập mã OTP đã đươợc gửi qua tin nhắn của email"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvOtpHint_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian hiệu lực OTP:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90s"
            android:textColor="@android:color/holo_red_light"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <EditText
        android:id="@+id/etOtpCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã gồm 6 chữ số"
        android:inputType="number"
        android:padding="10dp"
        android:background="@android:drawable/edit_text" />

    <TextView
        android:id="@+id/tvResendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không nhận được mã OTP ? Gửi lại mã"
        android:layout_marginTop="10dp"
        android:textColor="@color/xamdam"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnVerifyOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:backgroundTint="@color/mdtp_accent_color_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp" />
</LinearLayout>
