<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/arrowbg">

    <TextView
        android:id="@+id/tvEnterOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác thực"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOtpHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã OTP đã được gửi qua tin nhắn của email"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/etOtpCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã gồm 6 chữ số"
        android:inputType="number"
        android:padding="10dp"
        android:background="@android:drawable/edit_text" />

    <TextView
        android:id="@+id/tvResendOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại sau 179s"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_light" />

    <Button
        android:id="@+id/btnVerifyOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:backgroundTint="@color/mdtp_accent_color_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp" />

</LinearLayout>