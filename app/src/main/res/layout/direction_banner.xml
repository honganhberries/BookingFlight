<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="80dp"
    android:background="@color/mauxanhnhat"
    android:padding="10dp"
    android:elevation="5dp"
    android:layout_gravity="center">

    <!-- Icon hướng rẽ -->
    <ImageView
        android:id="@+id/turnIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_turn_left"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <!-- Khoảng cách đến điểm rẽ -->
    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="250 m"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toEndOf="@id/turnIcon"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true" />

    <!-- Tên đường hoặc thông tin thêm -->
    <TextView
        android:id="@+id/roadInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rẽ trái đường Phạm Hùng"
        android:background="@color/xambddam"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_toEndOf="@id/distance"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true" />

</RelativeLayout>
